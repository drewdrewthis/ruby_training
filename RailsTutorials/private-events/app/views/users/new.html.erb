<div class='text-center'>
  <h1>New User</h1>

  <%= form_for :user, url: users_path do |f| %>
    <p>
    <%= f.label :username %><br>
    <%= f.text_field :username, class: 'form-control'  %>
    </p>

    <p>
    <%= f.submit "Create user", class: "btn btn-primary" %>
    </p>
  <% end %>

  <%= link_to 'Back', users_path %>
</div>
