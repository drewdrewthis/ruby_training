<h1>All Events</h1>

<table class='table'>
  <thead>
    <tr>
      <th>id</th>
      <th>Host</th>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.creator.username %></td>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'View', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>
