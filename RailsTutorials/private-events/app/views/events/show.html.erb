<h1>Event Info</h1>
<hr/>
<p>
<strong>id:</strong>
<%= @event.id %>
</p>
<p>
<strong>Title:</strong>
<%= @event.title %>
</p>
<p>
<strong>Date:</strong>
<%= @event.date %>
</p>
<p>
<strong>Description:</strong>
</p>
<p>
<%= @event.description %>
</p>
<h3>Attendees</h3>
<table class='table'>
  <thead>
    <tr>
      <th>id</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @event.attendees.each do |attendee| %>
      <tr>
        <td><%= attendee.id %></td>
        <td><%= attendee.username %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'View all events', events_path %>
